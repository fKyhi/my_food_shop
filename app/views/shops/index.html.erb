<%= render "shared/header" %>

<div class="main-content">
  <%= image_tag "mlxpi32l2xu8e1ogdjhqiz2sufyu.jpeg", class:"main-img" %>
  <h1 class="main-title">My Food Shop</h1>
  <p class="app-explain">
    あなたのオススメのお店を友人に紹介/共有しよう！
  </p>
</div>

<% if @shops.present? %>
  <div class="shop-contents">
    <h2 class="shop-title">Shop Lists</h2>
    <ul class="shop-lists">
      <% @shops.each do |shop|%>
        <li class="list">
          <%= link_to shop_path(shop.id) do %>
            <div class="shop-img-contents">
              <%= image_tag shop.image, class: "shop-img" if shop.image.attached? %>
            </div>
          <% end %>
            <table class="shop-table">
              <tbody>
                <tr>
                  <th class="detail-th">Shop名：</th>
                  <td class="detail-td"><%= shop.name %></td>
                </tr>
                <tr>
                  <th class="detail-th">カテゴリー：</th>
                  <td class="detail-td"><%= shop.category.name %></td>
                </tr>
              </tbody>
            </table>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= link_to(new_shop_path, class: 'shop-btn') do %> 
  <span class="shop-btn-text">投稿する</span>
  <%= image_tag '9898.png' , size: '185☓50' ,class: "shop-btn-icon" %>
<% end %>
<%= render "shared/footer" %>