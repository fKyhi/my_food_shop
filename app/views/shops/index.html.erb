<%= render "shared/header" %>
<h1>Shops#index</h1>

<div class="shop-contents">
  <h2 class="title">Shop一覧</h2>
  <ul class="shop-lists">
    <% @shops.each do |shop|%>
      <li class="list">
        <%= link_to shop_path(shop.id) do %>
          <div class="shop-img-content">
            <%= image_tag shop.image, class: "shop-img" if shop.image.attached? %>
          </div>
          <div class="shop-info">
            <h3 class="shop-name">
              <%= shop.name %>
            </h3>
            <div class="shop-category">
              <%= shop.category.name %>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to(new_shop_path, class: 'shop-btn') do %>
  <span class="shop-btn-text">投稿する</span>
  <%= image_tag '9898.png' , size: '185☓50' ,class: "shop-btn-icon" %>
<% end %>
<%= render "shared/footer" %>